<h1>New Ad</h1>

<div class="row">
  <%= form_for @advertisement do |a| %>
    <div class="form-group">
      <%= a.label :title %>
      <%= a.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
    </div>
    <div class="form-group">
      <%= a.label :copy %>
      <%= a.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement body" %>
    </div>
    <div class="form-group">
      <%= a.label :price %>
      <%= a.number_field :price, class: 'form-control', placeholder: 0 %>
    </div>
    <div class="form-group">
      <%= a.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
