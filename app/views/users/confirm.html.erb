<h1>Sign Up Confirmation</h1>

<div class="row">
 <div class="col-md-4">
   <h2>Are you sure this is correct?</h2>

     <p><strong>Email: <%= @user.email %></strong></p>
     <p><strong>Name: <%= @user.name %></strong></p>
  </div>
</div>

<div class="row">
<%= button_to "Yes", { :controller => 'users', :action => 'create', :params => params.permit!}, class: 'btn btn-success' %>
</div>

<div class="col-md-4", style="width: auto;">
<%= button_to "No", { :controller => 'users', :action => 'new'}, class: 'btn btn-warning', :method => :get %>
</div>
